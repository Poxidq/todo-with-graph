{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "&server/*": [
        "./src/server/*"
      ],
      "&utils/*": [
        "./src/utils/*"
      ],
      "&pages/*": [
        "./src/pages/*"
      ],
      "&styles/*": [
        "./src/styles/*"
      ],
      "&env/*": [
        "./src/env/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "./**/*.tsx",
    "./**/*.ts",
    "./**/*.cjs",
    "./**/*.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}